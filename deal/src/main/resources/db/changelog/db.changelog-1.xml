<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <preConditions>
        <runningAs  username="admin"/>
    </preConditions>

    <changeSet  id="create-client-table"  author="twentyoneh">
        <createTable  tableName="client">
            <column name="client_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(50)"/>
            <column name="marital_status" type="VARCHAR(255)"/>
            <column name="dependent_amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="passport_id" type="jsonb"/>
            <column name="employment_id" type="jsonb"/>
            <column name="account_number" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet  id="create-statement-table"  author="twentyoneh">
        <createTable  tableName="statement">
            <column name="statement_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="credit_id" type="UUID"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="creation_date" type="TIMESTAMP"/>
            <column name="applied_offer" type="jsonb"/>
            <column name="sign_date" type="TIMESTAMP"/>
            <column name="ses_code" type="VARCHAR(255)"/>
            <column name="status_history" type="jsonb"/>
        </createTable>
    </changeSet>

    <changeSet  id="create-credit-table"  author="twentyoneh">
        <createTable tableName="credit">
            <column name="credit_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="term" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="NUMERIC(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="psk" type="NUMERIC(10,2)"/>
            <column name="payment_schedule" type="jsonb"/>
            <column name="insurance_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="salary_client" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="credit_status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>